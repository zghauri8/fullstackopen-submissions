{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "process": true,
    "module": true,
    "require": true,
    "__dirname": true
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-prototype-builtins": "off",
    "no-undef": "off" // Temporarily off to avoid require/process errors
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**"
  ]
}